  "prefer_related_applications": false,
  "related_applications": [],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": [
            "image/*",
            "application/pdf"
          ]
        }
      ]
    }
  },
  
  "iarc_rating_id": "",
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+abuabad",
      "url": "/protocol-handler?url=%s"
    }
  ],
  
  "permissions": [
    "camera",
    "microphone",
    "notifications"
  ],
  
  "features": [
    {
      "name": "VideoChat",
      "description": "WebRTC-basierte Videosprechstunden"
    },
    {
      "name": "OfflineMessages",
      "description": "Nachrichten offline verfassen"
    },
    {
      "name": "PushNotifications",
      "description": "Push-Benachrichtigungen für Termine"
    }
  ]
}
